<div class="contnr">
  <div class="row justify-content-between fix-scr">
    <div class="col-12 col-md-12 col-lg-8 mt-3">
      <%if @geomems.count > 0%>
        <h2 class="text-center first-title"> <%= image_tag 'heartp.png', height: 20, width: 20 %> You have <%=@geomems.count%> memories <%= image_tag 'heartp.png', height: 20, width: 20 %></h2>
      <%end%>
      <div class="cards grd">
        <%@geomems.each do |memory|%>
          <%= link_to geomem_path(memory), class:"wrap-a" do %>
            <div class="polaroidnew" id="<%=memory.id%>">
              <%= cl_image_tag memory.photo.key, height: 250, width: 250,crop: :fill %>
              <p class="pol-lct mt-3"><%=memory.location%></p>
              <%if (Time.zone.now.day - memory.created_at.day) > 1%>
                <p class="post-date">Posted <%=Time.zone.now.day - memory.created_at.day%> days ago</p>
              <%elsif (Time.zone.now.day - memory.created_at.day) == 1 %>
                <p class="post-date">Posted yesterday</p>
              <%elsif (Time.zone.now.hour - memory.created_at.hour) >= 1%>
                <p class="post-date">Posted <%=Time.zone.now.hour - memory.created_at.hour%> hours ago</p>
              <%elsif (Time.zone.now.to_a[1] - memory.created_at.to_a[1]) >= 1%>
                <p class="post-date">Posted <%=Time.zone.now.to_a[1] - memory.created_at.to_a[1]%> minutes ago</p>
              <%else%>
                <p class="post-date">Posted now</p>
              <%end%>
              <p hidden id="js-coord"><%=memory.coordinates%></p>
              <p class="pol-title"><%=memory.title%></p>
            </div>
          <%end%>
        <%end%>
      </div>  
    </div>
    <div class="col-12 col-md-12 col-lg-4 pt-3">
     <div id="map"
     style="width: 100%; height: 99vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
     </div>
    </div>
  </div>
</div>
